<%= form_with(model: venda) do |form| %>
  <% if venda.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(venda.errors.count, "error") %> prohibited this venda from being saved:</h2>

      <ul>
        <% venda.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :cliente_id, "Cliente:", style: "display: block" %>
    <%= form.collection_select :cliente_id, @clientes, :id, :nome, { prompt: "Selecione o cliente" }, { class: "form-control" } %>
  </div>

  <div>
    <%= form.label :veiculo_id, "Veículo:", style: "display: block" %>
    <%= form.collection_select :veiculo_id, @veiculos, :id, :modelo, { prompt: "Selecione o veículo" }, { class: "form-control" } %>
  </div>

  <div>
    <%= form.label :vendedor_id, "Vendedor:", style: "display: block" %>
    <%= form.collection_select :vendedor_id, @vendedores, :id, :nome, { prompt: "Selecione o vendedor" }, { class: "form-control" } %>
  </div>

  <div>
    <%= form.label :valor, "Valor:", style: "display: block" %>
    <%= form.text_field :valor, class: "form-control" %>
  </div>

  <div>
    <%= form.label :quantidade_veiculos, "Quantidade de Veículos:", style: "display: block" %>
    <%= form.number_field :quantidade_veiculos, class: "form-control" %>
  </div>

  <div>
    <%= form.label :status, "Status:", style: "display: block" %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
